{
  "name": "GLesCrocs",
  "version": "1.0.0",
  "description": "GLesCrocs - Restaurant management system",
  "type": "module",
  "main": "backend/src/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "node backend/src/server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "node backend/src/server.js",
    "seed": "node backend/db/seed.js",
    "remove-demo": "node backend/scripts/remove_demo_admin.js"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "keywords": [
    "restaurant",
    "management",
    "system"
  ],
