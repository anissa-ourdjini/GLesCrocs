    "seed": "node backend/db/seed.js",
    "remove-demo": "node backend/scripts/remove_demo_admin.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.8.0",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11"
  },
  "keywords": [
    "restaurant",
    "management",
    "system"
  ],
